<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="2.5" client="administrator" method="upgrade">
    <name>MOD_VCNT_BACKEND_INFO</name>
    <author>Viktor Vogel</author>
    <creationDate>24-Jun-2012</creationDate>
    <copyright>This module its released under GPL/GNU License</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>admin@kubik-rubik.de</authorEmail>
    <authorUrl>www.kubik-rubik.de</authorUrl>
    <version>2.5-1</version>
    <description>MOD_VCNT_BACKEND_INFO_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_vcnt_backend_info">mod_vcnt_backend_info.php</filename>
        <filename module="mod_vcnt_backend_info">mod_vcnt_backend_info.css</filename>
        <filename module="mod_vcnt_backend_info">helper.php</filename>
        <filename module="mod_vcnt_backend_info">index.html</filename>
        <filename module="mod_vcnt_backend_info">tmpl/default.php</filename>
        <filename module="mod_vcnt_backend_info">tmpl/index.html</filename>
        <folder module="mod_vcnt_backend_info">fields</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_vcnt_backend_info.sys.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_vcnt_backend_info.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.mod_vcnt_backend_info.sys.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.mod_vcnt_backend_info.ini</language>
    </languages>
    <config>
        <fields name="params" addfieldpath="/administrator/modules/mod_vcnt_backend_info/fields">
            <fieldset name="basic">
                <field type="krdonationcodecheck" />
                <field name="s_today" type="radio" default="1" label="MOD_VCNT_BACKEND_INFO_SHOWTODAY" description="MOD_VCNT_BACKEND_INFO_SHOWTODAYUSERS">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="today" type="text" default="" label="MOD_VCNT_BACKEND_INFO_TODAYOPT" description="MOD_VCNT_BACKEND_INFO_TODAYDESC" />
                <field name="s_yesterday" type="radio" default="1" label="MOD_VCNT_BACKEND_INFO_SHOWYESTERDAY" description="MOD_VCNT_BACKEND_INFO_SHOWYESTERDAYUSERS">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="yesterday" type="text" default="" label="MOD_VCNT_BACKEND_INFO_YESTERDAYOPT" description="MOD_VCNT_BACKEND_INFO_YESTERDAYDESC" />
                <field name="s_week" type="radio" default="1" label="MOD_VCNT_BACKEND_INFO_SHOWWEEK" description="MOD_VCNT_BACKEND_INFO_SHOWWEEKUSERS">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="week" type="text" default="" label="MOD_VCNT_BACKEND_INFO_WEEKOPT" description="MOD_VCNT_BACKEND_INFO_WEEKDESC" />
                <field name="s_month" type="radio" default="1" label="MOD_VCNT_BACKEND_INFO_SHOWMONTH" description="MOD_VCNT_BACKEND_INFO_SHOWMONTHUSERS">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="month" type="text" default="" label="MOD_VCNT_BACKEND_INFO_MONTHOPT" description="MOD_VCNT_BACKEND_INFO_MONTHDESC" />
                <field name="s_all" type="radio" default="1" label="MOD_VCNT_BACKEND_INFO_SHOWALL" description="MOD_VCNT_BACKEND_INFO_SHOWALLUSERS">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="all" type="text" default="" label="MOD_VCNT_BACKEND_INFO_ALLOPT" description="MOD_VCNT_BACKEND_INFO_ALLDESC" />
                <field name="whoisonline" type="radio" default="2" label="MOD_VCNT_BACKEND_INFO_WHOISONLINE" description="MOD_VCNT_BACKEND_INFO_WHOISONLINEDESC">
                    <option value="1">JYES</option>
                    <option value="2">JYESNAMES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="whoisonline_linknames" type="radio" default="1" label="MOD_VCNT_BACKEND_INFO_WHOISONLINELINKNAMES" description="MOD_VCNT_BACKEND_INFO_WHOISONLINELINKNAMESDESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="whoisonline_session" type="text" default="10" label="MOD_VCNT_BACKEND_INFO_WHOISONLINESESSION" description="MOD_VCNT_BACKEND_INFO_WHOISONLINESESSIONDESC" />
                <field name="horizontal" type="radio" default="0" label="MOD_VCNT_BACKEND_INFO_HORIZONTAL" description="MOD_VCNT_BACKEND_INFO_HORIZONTALDESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                    <option value="2">MOD_VCNT_BACKEND_INFO_YESCOMPACT</option>
                </field>
                <field name="hor_text" type="text" default="" label="MOD_VCNT_BACKEND_INFO_HORTEXT" description="MOD_VCNT_BACKEND_INFO_HORTEXTDESC" />
                <field name="separator" type="text" default="" label="MOD_VCNT_BACKEND_INFO_SEPARATOR" description="MOD_VCNT_BACKEND_INFO_SEPARATORDESC" />
                <field type="spacer" default="MOD_VCNT_BACKEND_INFO_BOTS" />
            </fieldset>
            <fieldset name="advanced">
                <field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
            </fieldset>
            <fieldset name="donation">
                <field name="donation_code" type="text" default="" size="40" label="KR_DONATION_CODE" description="KR_DONATION_CODEDESC" />
            </fieldset>
        </fields>
    </config>
</extension>